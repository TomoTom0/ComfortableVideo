{
  "name": "comfortable-video",
  "version": "1.1.2",
  "description": "Comfortable Video - 快適な動画視聴環境を提供するChrome拡張機能",
  "scripts": {
    "build": "tsc && rsync -a public/ dist/ || cp -r public/. dist/ || true",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "rebuild": "bun run clean && bun run build",
    "build:script": "./scripts/build.sh",
    "deploy": "./scripts/rsync.sh",
    "package": "./scripts/package.sh",
    "build-and-deploy": "./scripts/build-and-deploy.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "chrome-extension",
    "video",
    "comfortable-mode",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^24.27.0"
  }
}
